{
    "name": "akutaktau/cake-social-media",
    "description": "CakeSocialMedia plugin for CakePHP",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "~3.0",
        "facebook/graph-sdk": "~5.0",
        "abraham/twitteroauth": "^0.7.1",
        "google/apiclient": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
	
    "autoload": {
        "psr-4": {
            "CakeSocialMedia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeSocialMedia\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
